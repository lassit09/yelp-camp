<% include partials/header %>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>View the favorite campgrounds of campers all over the world.</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                </p>
            </div>
        </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail img-fluid">
                    <img src="<%= campground.image %>" alt="campground picture">
                </div>
                <h4><%= campground.name %></h4>
            </div>
        <% }); %>
    </div>
        
        

        <br>

        <a href="/">Back to Landing Page</a>
    </div>
<%include partials/footer %>